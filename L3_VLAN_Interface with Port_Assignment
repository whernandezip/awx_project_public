---
- name: L3_VLAN_Interface with Port_Assignment
  
  hosts: all
  
  connection: network_cli
  
  tasks:
  - name: configure VLAN ID and name
  net_vlan:
    vlan_id: 1132
    name: PI_Telecom-VoiceGateway
    
    - name: configure interface
  ios_interface:
      name: GigabitEthernet1/0/7
      description: VoiceGateway_430_Port1
      
      - name: Add interface using aggregate
  ios_interface:
    aggregate:
    - { name: GigabitEthernet1/0/7, description: VoiceGateway_430_Port1 }
    - { name: GigabitEthernet2/0/7, description: VoiceGateway_430_Port2 }
    
    - name: Ensure GigabitEthernet0/5 is configured for access vlan 1132
  ios_l2_interface:
    name: GigabitEthernet1/0/7
    mode: access
    access_vlan: 1132
    
    - name: Create an (SVI) IPv4 address
  net_l3_interface:
    name: vlan1132
    ipv4: 10.32.32.1/24
    
    
    
     
      
      
